{% extends "PrincipalBundle:Templates:layout2.html.twig" %}
{% block title %}
Categorias
{% endblock %}
{% block body %}

<div class="container">
    <div class="row">
        <div class="col-md-7 col-md-offset-3">
            <div class="panel panel-default">
                <div class="panel-heading">
                <h2>Registro de categorias</h2>
                </div> 

                <div class="panel-body">
                    {{ form_start(form)}}
                    <div class="form-group">
                        {{ form_label(form.code)}}
                           {{ form_widget(form.code)}}
                        <span class="text-danger">  {{ form_errors(form.code)}}  </span>
                    </div>
                    <div class="form-group">
                        {{ form_label(form.name)}}
                        {{ form_widget(form.name)}}
                        <span class="text-danger">  {{ form_errors(form.name)}}  </span>
                    </div>
                    <div class="form-group">
                        {{ form_label(form.description)}}
                        {{ form_widget(form.description)}}
                        <span class="text-danger">  {{ form_errors(form.description)}}  </span>
                    </div>
                    <div class="form-group">
                        {{ form_label(form.state)}}
                        {{ form_widget(form.state)}}
                        <span class="text-danger">  {{ form_errors(form.state)}}  </span>
                    </div>
                    <div class="btn-toolbar" role="toolbar">
                        <div class="btn-group">
                            {{ form_widget(form.Guardar)}}
                            {{ form_rest(form) }}

                        </div>
                        
                        <div class="btn-group">
                        <a class="btn btn-primary" href="{{path('listCategory')}}" role="button">Listar</a>
                        </div>
                    </div>
                </div>
            </div> 
        </div>     
    </div>               
</div>

{% endblock %}